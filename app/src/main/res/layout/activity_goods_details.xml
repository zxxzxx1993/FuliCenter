<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/good_detail_bg_white"
    android:id="@+id/layout_goods_details"
    tools:context="com.example.administrator.day27project.activity.GoodsDetailsActivity">
    <LinearLayout
        android:id="@+id/line_goods"
        android:orientation="horizontal"
        android:background="@color/good_detail_title_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <ImageView
            android:id="@+id/back"
            android:src="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="25sp"
            android:layout_gravity="center_vertical"
            android:text="商品详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="match_parent">
           <ImageView
               android:id="@+id/iv_cart"
               android:layout_marginRight="5dp"
               android:layout_marginLeft="5dp"
               android:src="@mipmap/bg_cart_selected"
               android:layout_width="wrap_content"
               android:layout_height="match_parent" />
           <TextView
               android:id="@+id/cart_num"
               android:text="6"
               android:textColor="#000"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="6dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RelativeLayout>

        <ImageView
            android:id="@+id/collect"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/bg_collect_in"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/share"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/selector_share_bg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@color/list_background"
            android:layout_width="match_parent"
            android:layout_height="15dp" />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/english_name"
            android:textSize="17sp"
            android:layout_marginLeft="40dp"
            android:text="English Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/chnia_name"
                android:textSize="17sp"
                android:layout_marginLeft="40dp"
                android:text="中文名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/price"
                android:layout_weight="1"
                android:textColor="#e90e0e"
                android:text="价格"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
       <com.example.administrator.day27project.view.SlideAutoLoopView
           android:layout_weight="2"
           android:id="@+id/sal"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:background="@color/good_detail_bg_white"
           />
<com.example.administrator.day27project.view.FlowIndicator
    android:id="@+id/indicator"
    android:layout_width="match_parent"
    app:count="4"
    app:focus="0"
    app:focus_color="@color/good_detaul_flow_indicator_focus"
    app:normal_color="#c6c1c1"
    app:r="5dp"
    app:space="3dp"
    android:layout_height="wrap_content" />
 <TextView
     android:id="@+id/goods_introduce"
     android:layout_weight="2"
     android:textSize="17sp"
     android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
     android:layout_marginLeft="50dp"
     android:layout_marginRight="50dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content" />
</LinearLayout>
